<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:id="@+id/nav_graph"
  app:startDestination="@id/nav_account">

  <fragment
    android:id="@+id/nav_account"
    android:label="@string/app_name"
    android:name="edu.cnm.deepdive.greentrax.controller.AccountFragment"
    tools:layout="@layout/fragment_account">

    <action
      android:id="@+id/open_account"
      app:destination="@id/nav_edit_account">

      <argument
        android:name="account_id"
        app:argType="long"
        android:defaultValue="0L"/>

    </action>
  </fragment>

  <dialog
    android:id="@+id/nav_edit_account"
    android:name="edu.cnm.deepdive.greentrax.controller.EditAccountFragment"
    tools:layout="@layout/fragment_edit_account">

    <argument
      android:name="account_id"
      app:argType="long"
      android:defaultValue="0L"/>

  </dialog>


</navigation>